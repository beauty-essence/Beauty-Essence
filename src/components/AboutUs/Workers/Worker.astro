---
const {image, alt, title, description} = Astro.props
import Image from "astro/components/Image.astro";
---

<div class="flex flex-col justify-center items-center mt-20 max-w-xs h-[860px]">
    <div class="mb-8 max-w-xs w-80 md:w-[352px] overflow-hidden flex justify-center">
      <Image src={image} alt={alt} class="w-full h-full object-cover cursor-pointer hover:scale-110 transition-transform duration-300" />
    </div>
    <div>
        <h3
        class="text-3xl font-primary font-medium text-button-dark mb-3 text-center"
      >
        {title}
      </h3>
      <p class="font-primary text-xl font-medium text-secondary-text text-center">{description}</p>
    </div>
</div>