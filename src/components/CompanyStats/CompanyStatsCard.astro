---
interface Props {
  image: string
  alt: string
  title: string
  description: string
}
const { image, alt, title, description } = Astro.props
---

<div class="flex flex-col items-center justify-center">
  <img src={image} alt={alt} class="h-24" />
  <h4
    class="text-4xl font-primary font-bold text-button-dark text-center my-5"
  >
    {title}
  </h4>
  <p class="font-primary text-[#77846E] font-regular text-base text-center">
    {description}
  </p>
</div>
